<Window x:Class="NetPO.App.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetPO.App"
        mc:Ignorable="d"
        Title="Настройки NetPO"
        Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TabControl Grid.Row="0">
            <TabItem Header="URL">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Label Content="Разрешенные URL:" Grid.Row="0"/>
                    <ListBox x:Name="WhiteListedUrlsListBox" Grid.Row="1" Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right">
                        <TextBox x:Name="NewUrlTextBox" Width="300" Margin="0,0,10,0"/>
                        <Button Content="Добавить URL" x:Name="AddUrlButton" Click="AddUrlButton_Click" Margin="0,0,5,0" Padding="10,5"/>
                        <Button Content="Удалить URL" x:Name="RemoveUrlButton" Click="RemoveUrlButton_Click" Padding="10,5"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Приложения">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Label Content="Разрешенные приложения (например, notepad.exe):" Grid.Row="0"/>
                    <ListBox x:Name="AllowedAppsListBox" Grid.Row="1" Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right">
                        <TextBox x:Name="NewAppTextBox" Width="300" Margin="0,0,10,0"/>
                        <Button Content="Добавить приложение" x:Name="AddAppButton" Click="AddAppButton_Click" Margin="0,0,5,0" Padding="10,5"/>
                        <Button Content="Удалить приложение" x:Name="RemoveAppButton" Click="RemoveAppButton_Click" Padding="10,5"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Пароль">
                 <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Label Content="Текущий пароль (оставьте пустым, если не установлен):"/>
                    <PasswordBox x:Name="CurrentPasswordBox" Width="200" Margin="5"/>
                    <Label Content="Новый пароль (оставьте пустым, чтобы удалить):"/>
                    <PasswordBox x:Name="NewPasswordBox" Width="200" Margin="5"/>
                    <Label Content="Подтвердите новый пароль:"/>
                    <PasswordBox x:Name="ConfirmNewPasswordBox" Width="200" Margin="5"/>
                    <Button Content="Сохранить пароль" x:Name="SavePasswordButton" Click="SavePasswordButton_Click" Margin="5" Padding="10,5"/>
                </StackPanel>
            </TabItem>
            <TabItem Header="Расписание">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Label Content="Время для переключения звука (HH:mm):" Grid.Row="0"/>
                    <ListBox x:Name="ScheduleTimesListBox" Grid.Row="1" Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right">
                        <TextBox x:Name="NewScheduleTimeTextBox" Width="100" Margin="0,0,10,0" ToolTip="Введите время в формате HH:mm" VerticalAlignment="Center"/>
                        <Button Content="Добавить время" x:Name="AddScheduleTimeButton" Click="AddScheduleTimeButton_Click" Margin="0,0,5,0" Padding="10,5" VerticalAlignment="Center"/>
                        <Button Content="Удалить время" x:Name="RemoveScheduleTimeButton" Click="RemoveScheduleTimeButton_Click" Padding="10,5" VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
        
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,10,10">
             <TextBlock Margin="0,0,10,0" VerticalAlignment="Center">
                <Hyperlink NavigateUri="https://github.com/ilokitv" RequestNavigate="Hyperlink_RequestNavigate">
                    GitHub: ilokitv
                </Hyperlink>
            </TextBlock>
            <Button Content="Сохранить и закрыть" x:Name="SaveAndCloseButton" Click="SaveAndCloseButton_Click" Padding="10,5"/>
        </StackPanel>
    </Grid>
</Window>